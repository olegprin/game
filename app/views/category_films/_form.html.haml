= form_for @category_film do |f|
  - if @category_film.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category_film.errors.count, "error")} prohibited this category_film from being saved:"
      %ul
        - @category_film.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :film_id
    = f.text_field :film_id
  .field
    = f.label :integer
    = f.text_field :integer
  .actions
    = f.submit 'Save'
